<link rel="stylesheet" href="/stylesheets/style.css">

<!-- Hero Banner -->
<section class="hero-banner vh-100 d-flex align-items-center bg-light position-relative">
  <div class="container d-flex flex-column flex-lg-row align-items-center justify-content-between">
    
    <!-- Text Content -->
    <div class="hero-text text-start text-lg-start mb-4 mb-lg-0 ">
      <h1 class="hero-title display-4 fw-bold">Welcome to <span class="text-primary">ShopCart</span></h1>
      <p class="hero-subtitle lead">Discover premium products and elevate your lifestyle.</p>
      <a href="#categories" class="btn btn-primary btn-lg hero-btn mt-3">Shop Now</a>
    </div>

    <!-- Hero Image -->
    

  </div>
</section>

<!-- Categories Section -->
<section id="categories" class="categories-section py-5 bg-white">
  <div class="container">
    <h2 class="mb-5 fw-bold text-primary text-center">Shop by Categories</h2>

    {{#each categories}}
    <div class="category-section mb-5">
      <h3 class="mb-4 fw-bold">{{this.name}}</h3>
      <div class="row">
        {{#each this.products}}
        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4 d-flex">
          <div class="card shadow-sm product-card h-100 w-100 border-0 rounded-3">
            <div class="position-relative overflow-hidden">
              <img src="/product-images/{{this._id}}.jpg" class="card-img-top img-fluid product-image" alt="{{this.Name}}">
              <div class="overlay d-flex justify-content-center align-items-center">
                <a href="/add-to-cart/{{this._id}}" class="btn btn-primary rounded-pill">Add to Cart</a>
              </div>
            </div>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title">{{this.Name}}</h5>
              <p class="card-text text-truncate">{{this.Description}}</p>
              <p><span class="badge bg-success">â‚¹{{this.Price}}</span></p>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
    {{/each}}

  </div>
</section>

<!-- Footer -->
<footer class="bg-dark text-light py-4 mt-5">
  <div class="container text-center">
    <p>&copy; 2025 ShopCart. All rights reserved.</p>
  </div>
</footer>
