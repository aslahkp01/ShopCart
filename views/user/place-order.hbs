<head>
  <!-- Bootstrap 5 CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- Bootstrap Icons (optional, for icons) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

</head>
<section>
  <div class="container py-5">
    <form id="checkout-form">
      <div class="row g-5">
        
        <!-- Delivery Details -->
        <div class="col-lg-7">
          <div class="card border-0 shadow-sm rounded-4 p-4">
            <h4 class="fw-bold mb-4 text-primary">ðŸšš Delivery Details</h4>

            <div class="mb-3">
              <label class="form-label fw-semibold">Address</label>
              <input class="form-control form-control-lg" type="text" name="address" required>
            </div>

            <div class="row">
              <div class="col-md-6 mb-3">
                <label class="form-label fw-semibold">Pincode</label>
                <input class="form-control form-control-lg" type="text" name="pincode" required>
              </div>
              <div class="col-md-6 mb-3">
                <label class="form-label fw-semibold">Mobile</label>
                <input class="form-control form-control-lg" type="text" name="mobile" required>
              </div>
            </div>

            <input type="hidden" name="userId" value="{{user._id}}">
          </div>
        </div>

        <!-- Order Summary -->
        <div class="col-lg-5">
          <div class="card border-0 shadow-sm rounded-4 p-4 checkout-summary">
            <h4 class="fw-bold mb-4 text-primary">ðŸ§¾ Order Summary</h4>

            <div class="d-flex justify-content-between align-items-center mb-3">
              <span class="fw-semibold fs-5">Total Amount</span>
              <span class="fs-5 fw-bold text-success">â‚¹{{total}}</span>
            </div>
            <hr>

            <!-- Payment -->
            <h6 class="fw-semibold mb-3">Payment Method</h6>
            <div class="form-check mb-2">
              <input class="form-check-input" type="radio" name="paymentMethod" value="COD" id="cod" checked>
              <label class="form-check-label fw-semibold" for="cod">Cash on Delivery</label>
            </div>
            <div class="form-check mb-4">
              <input class="form-check-input" type="radio" name="paymentMethod" value="ONLINE" id="online">
              <label class="form-check-label fw-semibold" for="online">Online Payment</label>
            </div>

            <button class="btn btn-primary w-100 btn-lg rounded-pill shadow-sm" type="submit">
              âœ… Place Order
            </button>
          </div>
        </div>
      </div>
    </form>
  </div>
</section>

<style>
  .checkout-summary {
    background: #fdfdfd;
  }

  .form-control:focus {
    border-color: #0d6efd;
    box-shadow: 0 0 0 0.2rem rgba(13,110,253,.25);
  }

  .btn-lg {
    font-size: 1.1rem;
    padding: 12px;
  }
</style>

<!-- Bootstrap 5 JS (bundle includes Popper) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
