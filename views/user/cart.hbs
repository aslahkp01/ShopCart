<link rel="stylesheet" href="/stylesheets/cart.css">
<section class="py-5 bg-light">
  <div class="container">
    <h2 class="mb-5 fw-bold text-center display-5 text-primary">üõçÔ∏è Your Cart</h2>

    {{#if cartItems.length}}
    <div class="row">
      <!-- üß∫ Cart Items (Left) -->
      <div class="col-lg-8">
        <div class="row g-4">
          {{#each cartItems}}
          <div class="col-md-6">
            <div class="card border-0 shadow h-100">
              <div class="row g-0 h-100">
                <div class="col-4">
                  <img src="/product-images/{{this.productId}}.jpg" class="img-fluid rounded-start h-100 object-fit-cover" alt="{{this.name}}">
                </div>
                <div class="col-8">
                  <div class="card-body d-flex flex-column justify-content-between h-100">
                    <div>
                      <h5 class="card-title fw-semibold">{{this.name}}</h5>
                      <p class="text-muted small">{{this.description}}</p>
                      <h6 class="text-success fw-bold fs-5 mb-3">‚Çπ{{this.price}}</h6>
                    </div>
                    <div class="d-flex align-items-center gap-2 mt-auto">
                      <button class="btn btn-outline-dark btn-sm"
                              onclick="changeProductQuantity('{{this.cartId}}','{{this.productId}}',-1)">
                        <i class="fas fa-minus"></i>
                      </button>
                      <span id="qty-{{this.productId}}" class="px-3 fs-6 fw-semibold">{{this.quantity}}</span>
                      <button class="btn btn-outline-dark btn-sm"
                              onclick="changeProductQuantity('{{this.cartId}}','{{this.productId}}',1)">
                        <i class="fas fa-plus"></i>
                      </button>
                      <button class="btn btn-outline-danger btn-sm ms-auto"  type="button"
                              onclick="removeFromCart('{{this.cartId}}', '{{this.productId}}',event)">
                        <i class="fas fa-trash-alt"></i>
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          {{/each}}
        </div>
      </div>

      <!-- üí∞ Order Summary (Right) -->
      <div class="col-lg-4 mt-4 mt-lg-0">
        <div class="bg-white shadow rounded-4 p-4 sticky-top" style="top: 100px;">
          <h5 class="mb-3 text-muted">
            <i class="fas fa-receipt text-primary me-2"></i>Order Summary
          </h5>
          <hr>
          <div class="d-flex justify-content-between mb-2">
            <span class="text-muted">Items Total</span>
            <span class="fw-semibold">‚Çπ{{total}}</span>
          </div>
          <!-- Add more if needed (e.g., shipping, tax) -->
          <hr>
          <h4 class="fw-bold text-success d-flex justify-content-between">
            <span>Total</span>
            <span>‚Çπ{{total}}</span>
          </h4>
          <a href="/place-order" class="btn btn-gradient-primary btn-lg w-100 mt-4 shadow-sm">
            üßæ Proceed to Checkout
          </a>
        </div>
      </div>
    </div>

    {{else}}
      <div class="alert alert-info text-center mt-5 py-4">
        üõí Your cart is currently empty. Add something cool!
      </div>
    {{/if}}
  </div>
</section>



<script src="/javascripts/cart.js"></script>
